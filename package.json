{
  "name": "--libraryname--",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/lib/--libraryname--.js",
  "types": "dist/types/src/--libraryname--.d.ts",
  "author": "--username-- <--usermail-->",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "Doc.ai Software Package License v1.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "tsc": "tsc",
    "build:all": "yarn run build && typedoc --out docs --target es6 --theme minimal --mode file src",
    "build": "rimraf dist && yarn run tsc && yarn run build:parcel",
    "build:parcel": "parcel build dist/lib/src/--libraryname--.js -d dist/lib --target=node --global --libraryname-- --cache-dir .parcel-cache",    
    "jest:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "yarn run lint && yarn run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "postinstall": "ts-node tools/init"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.149",
    "@types/node": "13.11.0",
    "@types/parcel-env": "0.0.0",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/eslint-plugin-tslint": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "colors": "1.4.0",
    "commitizen": "4.0.3",
    "coveralls": "3.0.11",
    "cross-env": "7.0.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "14.1.1",
    "husky": "4.2.3",
    "jest": "25.2.7",
    "jest-config": "25.2.7",
    "lint-staged": "10.1.1",
    "lodash.camelcase": "4.3.0",
    "parcel-bundler": "1.12.4",
    "prettier": "2.0.2",
    "prettier-eslint": "9.0.1",
    "prompt": "1.0.0",
    "replace-in-file": "5.0.2",
    "rimraf": "3.0.2",
    "semantic-release": "17.0.4",
    "shelljs": "0.8.3",
    "ts-jest": "25.3.1",
    "ts-node": "8.8.2",
    "tslint": "6.1.1",
    "typedoc": "0.17.3",
    "typescript": "3.8.3"
  },
  "dependencies": {
  }
}
